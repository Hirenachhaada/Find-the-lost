<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.AddFoundItemFragment"
    android:background="@drawable/background1">

    <EditText
        android:id="@+id/foundItemUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Your Name *"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/foundItemPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Your Mobile Number *"
        android:inputType="number"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/foundItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Found Item Name *"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/foundItemColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Found Item Color *"
        android:textSize="22dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/foundItemLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Location *"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/foundItemPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Where you found it(e.g: Block 9 ) *"
        android:textSize="22dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/foundItemComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:textSize="22dp"
        android:textStyle="bold"
        android:hint="Any Comments"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/AddfoundItemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Add Info"
        android:textSize="25dp"
        android:textStyle="bold"
        app:backgroundTint="#0048FF" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Necessary things are marked by *"
        android:textColor="#FF0000"
        android:textSize="22sp" />

</LinearLayout>